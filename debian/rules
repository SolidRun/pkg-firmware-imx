#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# hack: will only work on OBS-created chroots
SOURCESDIR=/usr/src/packages/SOURCES/ ~

NAME=firmware-imx-5.0
MD5=543210d17971f61c7c1829d2c160dc4e

DESTDIR=$(CURDIR)/debian/tmp

%:
	dh $@

build:
	# fetch binaries
	find $(SOURCESDIR) -maxdepth 1 -iname "$(NAME).bin" -exec cp -v {} ./ \; -quit || true
	./fetch.sh $(NAME).bin $(MD5)
	chmod +x $(NAME).bin
	./$(NAME).bin --auto-accept --force

clean:
	rm -rf $(NAME) $(NAME).bin
	dh $@

override_dh_auto_install:
	mkdir -p $(DESTDIR)/lib/firmware/imx/vpu
	mkdir -p $(DESTDIR)/lib/firmware/imx/sdma
	install -v -m644 $(NAME)/firmware/vpu/*.bin $(DESTDIR)/lib/firmware/imx/vpu/
	install -v -m644 $(NAME)/firmware/sdma/*.bin $(DESTDIR)/lib/firmware/imx/sdma/
